name: GH Pages Deploy

on:
  push:
    branches: [ main ]
    paths-ignore:
      - "docs/**"
      - README.md

  pull_request:
    branches: [ main ]
    paths-ignore:
      - "docs/**"
      - README.md

jobs:
  build-deploy:
    name: Build and deploy

    runs-on: ubuntu-latest

    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v2
        with:
          submodules: true
          fetch-depth: 0

      - name: Set up Hugo
        uses: peaceiris/actions-hugo@v2
        with:
          hugo-version: latest
          extended: true

      - name: Build ğŸ—
        run: make build

      - name: Deploy to GH Pages ğŸš€
        if: ${{ github.event_name != 'pull_request' }}
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: public
